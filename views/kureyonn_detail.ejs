<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= data.name %></title>
</head>
<body>
  <h2><%= data.name %>の詳細</h2>
  <table>
    <tr><th>項目</th><th>データ</th></tr>
    <tr><td>ID</td><td><%= data.id %></td></tr>
    <tr><td>名前</td><td><%= data.name %></td></tr>
    <tr><td>年齢</td><td><%= data.age %></td></tr>
    <tr><td>特技</td><td><%= data.skill %></td></tr>
    <tr><td>好きな物</td><td><%= data.like %></td></tr>
    <tr><td>所属</td><td><%= data.join %></td></tr>
  </table>
  <a href="/kureyonn/edit/<%= id %>">編集</a>
